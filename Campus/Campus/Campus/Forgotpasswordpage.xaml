<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Campus.Forgotpasswordpage">
    <StackLayout VerticalOptions="CenterAndExpand">
        <Label Text="Password Recovery" TextColor="Teal"
                   FontSize="30" FontAttributes="Bold"/>
        <StackLayout x:Name="stack1" Padding="10" IsVisible="True">
            <BoxView HeightRequest="55"/>
            <Label Text="Student ID" TextColor="Black"
                       FontSize="25" FontAttributes="Bold"/>
            <Entry x:Name="rollno" Placeholder="Enter Your Roll no"
                       PlaceholderColor="Silver" Keyboard="Numeric"/>
            <Label Text="Email" TextColor="Black"
                       FontSize="25" FontAttributes="Bold"/>
            <Entry x:Name="email" Placeholder="Enter your registered email id"
                       PlaceholderColor="Silver" Keyboard="Email"/>
            <BoxView HeightRequest="10"/>
            <Button Text="Request Password" BackgroundColor="Teal" Clicked="Button_Clicked"
                        TextColor="White" FontAttributes="Bold"/>
        </StackLayout>
    </StackLayout>
</ContentPage>